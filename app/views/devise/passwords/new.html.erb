<div class='grid-container wrapper'>
  <div class='devise-bg callout'>
    <h2 class='devise-style'>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'devise-style' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'devise-form' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'button' %>
      </div>
    <% end %>

     <div class='devise-flex'>
      <%= render "devise/shared/links", class: 'devise-links' %>
    </div>
  </div>
</div>
