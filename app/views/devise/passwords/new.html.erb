<div class='container'>
  <div class='devise-bg callout'>
    <h4 class='is-size-4 has-text-centered font-white'>Forgot your password?</h4>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'devise-style label' %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'button' %>
      </div>
    <% end %>

     <div class='devise-flex'>
      <%= render "devise/shared/links", class: 'devise-links' %>
    </div>
  </div>
</div>
