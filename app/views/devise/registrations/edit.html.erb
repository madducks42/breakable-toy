<div class="container">
  <h2 class='is-size-2'>Update Account Information:</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, class: 'label' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :first_name, class: 'label' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :last_name, class: 'label' %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: 'label' %> <i>(leave blank if you don't want to change it)</i>
      
      
      <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
      <% if @minimum_password_length %>
        
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: 'label' %> <i>(we need your current password to confirm your changes)</i>
      
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
    </div>

    <div class="flex-row">
      <div class="actions">
        <%= f.submit "Update", class: "button" %>
      </div>
      <%= link_to "Cancel", :back, class:"button ml-3" %>
    </div>
  <% end %>

  <div class="callout mt-6 mb-6 p-md">
    <h6 class="font-red is-size-6 has-text-weight-bold mb-4">Delete Account</h6>
    <p class="is-size-7 mb-4">Please be sure you want to delete your account. Once an account has been deleted it cannot be recovered!</p>
    <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"button" %>
  </div>

</div>
